header.navbar {
    @apply px-64 bg-white shadow-card;
    margin-left: 20rem;
    span.site-name {
        @apply text-grey-900;
        &:hover {
            @apply text-blue-500;
        }
    }

    div.dropdown-wrapper > button {
        @apply font-bold;
    }

    div.links {
        @apply bg-transparent;
    }
}

main.page {
    padding-left: 18rem;
}

aside.sidebar {
    width: 18rem;
}

header.navbar {
    margin-left: 18rem;
}

.BrightInputList {
    ul, ol {
        padding-left: initial;
    }
}

@media (max-width: 959px) {
    main.page {
        padding-left: 0;
    }
    aside.sidebar {
        width: 20rem;
    }

    header.navbar {
        margin-left: 0;
    }
}

aside.sidebar {
    * {
        transition: all 0.125s linear;
    }

    @apply bg-grey-900 shadow-card;
    top: 0 !important; /* Glue it to the top of the screen */
    &::-webkit-scrollbar {
        display: none;
    }

    ul.sidebar-links a.sidebar-link {
        @apply text-grey-200;
        font-size: 14px !important;
        &:hover {
            @apply text-blue-400;
        }
    }

    > .sidebar-links > li:not(:first-child) {
        @apply mt-12;
    }

    .sidebar-heading {
        @apply text-grey-100 font-semibold px-24;
        font-size: 16px !important;
        &.open {
            @apply text-white font-semibold;
            &.active, &:hover {
                @apply text-blue-300;
            }
            & + ul.sidebar-links > li > a.sidebar-link {
                @apply text-grey-200 font-semibold;
                &.active, &:hover {
                    @apply text-blue-300;
                }
                &.active {
                    @apply bg-grey-500 bg-opacity-20 border-blue-500 text-blue-300 font-primary font-medium pt-12;
                    border-left: 0.25rem;
                    letter-spacing: 0.01em;
                    + ul {
                        @apply bg-grey-500 bg-opacity-20 border-blue-500;
                        border-left: 0.25rem;
                        > li:last-child {
                            @apply pb-12;
                        }
                        > li > a.sidebar-link {
                            @apply text-grey-100 font-secondary font-semibold;
                            font-size: 14px !important;
                            letter-spacing: 0.01em;
                            &.active, &:hover {
                                @apply text-blue-300;
                            }
                            &.active {
                                @apply border-blue-500;
                                border-right: 0.25rem !important;
                            }
                            + ul a.sidebar-link {
                                font-size: 13px !important;
                                @apply font-secondary py-4 text-grey-200;
                                &.active, &:hover {
                                    @apply text-blue-300;
                                }
                                &.active {
                                    @apply border-blue-500;
                                    border-right: 0.25rem !important;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    a, a.sidebar-link {
        @apply py-5;
    }
    .sidebar-sub-headers  {
        .sidebar-sub-header {
            @apply pl-4;
            .sidebar-sub-header {
                @apply pl-4;
            }
        }
    }

    .sidebar-group a.sidebar-link {
        @apply px-32;
    }

    ul.sidebar-links > li:not(:first-child) section.sidebar-group {
        @apply border-grey-800 border-t;
        > a {
            @apply pt-12;
        }
        ul li a.active.sidebar-link {
            @apply text-blue-300;
        }
    }

    .sidebar-sub-headers a.sidebar-link {
        padding: 0.375rem 1.5rem;
    }
}

.sidebar:hover {
    &::-webkit-scrollbar {
        @apply bg-grey-700 overflow-x-hidden;
        display: revert;
        width: 8px;
    }

    &::-webkit-scrollbar-thumb {
        @apply bg-grey-500 rounded-4;
    }
}

.sidebar > .sidebar-links > li .sidebar-heading,
.sidebar > .sidebar-links > li > a.sidebar-link{
    font-family: 'Poppins', sans-serif;
}

a.header-anchor {
